<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="vindi_vp_cardcard" translate="label comment" type="text" sortOrder="600" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Cartão + Cartão</label>
        <field id="active" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/vindi_vp_cardcard/active</config_path>
        </field>
        <field id="title" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Title</label>
            <config_path>payment/vindi_vp_cardcard/title</config_path>
            <comment>Title of the payment method to be shown on checkout's page</comment>
        </field>
        <field id="recurring" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Can be used for recurring purchases?</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/vindi_vp_cardcard/recurring</config_path>
        </field>
        <field id="payment_link_instructions" translate="label comment" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Payment Link Instructions</label>
            <config_path>payment/vindi_vp_cardcard/payment_link_instructions</config_path>
            <comment><![CDATA[Instructions to be shown in payment link success page, it can be HTML]]></comment>
        </field>
    </group>
</include>
